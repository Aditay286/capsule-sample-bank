authorization {
  user {
    oauth2-authorization-code ("Mock Bank") {
      authorize-endpoint ("https://bank.bixby.pro/dialog/authorize")
      client-id ("xyz123")
      client-secret-key ("ssh-password")
      scope ("transfer_money")
      token-endpoint ("https://bank.bixby.pro/oauth/token")
    }
  }
}